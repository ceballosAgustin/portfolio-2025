import AngularIcon from "../../public/icons/frontend/Angular.astro";
import NodeJSIcon from "../../public/icons/backend/NodeJS.astro";
import CSharpIcon from "../../public/icons/backend/CSharp.astro";
import DotNetIcon from "../../public/icons/backend/DotNet.astro";
